@model IEnumerable<API_Notas.Models.Persona>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomPersona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApePersona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPerfilNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomPersona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApePersona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPerfilNavigation.IdPerfil)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RutPersona">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RutPersona">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RutPersona">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
